<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="textVeryLarge" parent="textMedium">
        <item name="android:textSize">26sp</item>
    </style>

    <style name="textLarge" parent="textMedium">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="textMedium">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="textSmall" parent="textMedium">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="textVerySmall" parent="textSmall">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="textMedium.heading">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textSmall.warning">
        <item name="android:textColor">@color/red</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="button" parent="textMedium">
        <item name="android:textSize">16sp</item>
        <item name="android:background">@color/blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_gravity">center_horizontal|bottom</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>