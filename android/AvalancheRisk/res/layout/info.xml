<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background" >

    <ScrollView
        android:id="@+id/infoScroller"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="vertical" >

        <LinearLayout
            android:id="@+id/infoForm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transWhite"
            android:orientation="vertical" >

            <!-- Hazard levels -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/blue_hgradient"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/hazardHeading"
                    style="@style/textMedium.heading"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="@string/hazard_heading"
                    android:textColor="@color/white" />

                <ImageView
                    android:id="@+id/hazardArrow"
                    style="@style/arrowButton"
                    android:src="@drawable/arrow_down" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/hazardLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone" >

                <TextView
                    style="@style/textMedium.block"
                    android:text="@string/hazard_desc" />

                <TextView
                    style="@style/textMedium.heading"
                    android:background="@drawable/green_hgradient"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="@string/low" />

                <TextView
                    style="@style/textMedium.block"
                    android:text="@string/hazard_level_1_desc" />

                <TextView
                    style="@style/textMedium.heading"
                    android:background="@drawable/yellow_hgradient"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="@string/moderate" />

                <TextView
                    style="@style/textMedium.block"
                    android:text="@string/hazard_level_2_desc" />

                <TextView
                    style="@style/textMedium.heading"
                    android:background="@drawable/orange_hgradient"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="@string/considerable" />

                <TextView
                    style="@style/textMedium.block"
                    android:text="@string/hazard_level_3_desc" />

                <TextView
                    style="@style/textMedium.heading"
                    android:background="@drawable/red_hgradient"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="@string/high" />

                <TextView
                    style="@style/textMedium.block"
                    android:text="@string/hazard_level_4_desc" />

                <TextView
                    style="@style/textMedium.heading"
                    android:background="@drawable/black_hgradient"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="@string/veryHigh"
                    android:textColor="@color/white" />

                <TextView
                    style="@style/textMedium.block"
                    android:text="@string/hazard_level_5_desc" />
            </LinearLayout>

            <!-- reduction method -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/blue_hgradient"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/reductionHeading"
                    style="@style/textMedium.heading"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="@string/reduction_heading"
                    android:textColor="@color/white" />

                <ImageView
                    android:id="@+id/reductionArrow"
                    style="@style/arrowButton"
                    android:src="@drawable/arrow_down" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/reductionLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone" >

                <TextView
                    style="@style/textMedium.block"
                    android:text="@string/reduction_desc" />
            </LinearLayout>

            <!-- 3x3 method -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/blue_hgradient"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/threex3Heading"
                    style="@style/textMedium.heading"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="@string/threex3_heading"
                    android:textColor="@color/white" />

                <ImageView
                    android:id="@+id/threex3Arrow"
                    style="@style/arrowButton"
                    android:src="@drawable/arrow_down" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/threex3Layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone" >

                <TextView
                    style="@style/textMedium.block"
                    android:text="@string/threex3_desc" />
            </LinearLayout>

            <!-- Book references -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/blue_hgradient"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/booksHeading"
                    style="@style/textMedium.heading"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="@string/books_heading"
                    android:textColor="@color/white" />

                <ImageView
                    android:id="@+id/booksArrow"
                    style="@style/arrowButton"
                    android:src="@drawable/arrow_down" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/booksLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone" >

                <TextView
                    style="@style/textMedium.heading"
                    android:text="@string/threex3LawinenBook_title" />

                <TextView
                    style="@style/textMedium"
                    android:text="@string/threex3LawinenBook" />

                <TextView
                    style="@style/textMedium.heading"
                    android:text="@string/PowderGuideBook_title" />

                <TextView
                    style="@style/textMedium"
                    android:text="@string/PowderGuideBook" />
            </LinearLayout>

            <!-- Links -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/blue_hgradient"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/linksHeading"
                    style="@style/textMedium.heading"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="@string/links_heading"
                    android:textColor="@color/white" />

                <ImageView
                    android:id="@+id/linksArrow"
                    style="@style/arrowButton"
                    android:src="@drawable/arrow_down" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linksLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone" >

                 <TextView
                    style="@style/textMedium.heading"
                    android:background="@drawable/blue_hgradient"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="@string/nationalAviInfoLinks" />

                 <TextView
                    style="@style/textMedium.link"
                    android:text="@string/CHELink" />

                 <TextView
                    style="@style/textMedium.link"
                    android:text="@string/AUTLink" />

                 <TextView
                    style="@style/textMedium.link"
                    android:text="@string/FRALink" />

                 <TextView
                    style="@style/textMedium.link"
                    android:text="@string/ITALink" />

                 <TextView
                    style="@style/textMedium.link"
                    android:text="@string/DEULink" />

                 <TextView
                    style="@style/textMedium.link"
                    android:text="@string/NORLink" />

                 <TextView
                    style="@style/textMedium.link"
                    android:text="@string/SWELink" />

                 <TextView
                    style="@style/textMedium.link"
                    android:text="@string/CANLink" />

                 <TextView
                    style="@style/textMedium.link"
                    android:text="@string/USALink" />

                 <TextView
                    style="@style/textMedium.link"
                    android:text="@string/NZLLink" />

                 <TextView
                    style="@style/textMedium.link"
                    android:text="@string/ARGLink" />

                 <TextView
                    style="@style/textMedium.heading"
                    android:background="@drawable/blue_hgradient"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="@string/equipmentLinks" />

                 <TextView
                    style="@style/textMedium.link"
                    android:text="@string/mammutLink" />

                 <TextView
                    style="@style/textMedium.link"
                    android:text="@string/piepsLink" />

                 <TextView
                    style="@style/textMedium.link"
                    android:text="@string/bcaLink" />

                 <TextView
                    style="@style/textMedium.link"
                    android:text="@string/ortovoxLink" />

                 <TextView
                    style="@style/textMedium.link"
                    android:text="@string/blackDiamondLink" />

                 <TextView
                    style="@style/textMedium.heading"
                    android:background="@drawable/blue_hgradient"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="@string/interestingLinks" />

                 <TextView
                    style="@style/textMedium.link"
                    android:text="@string/SAALink" />

                 <TextView
                    style="@style/textMedium.link"
                    android:text="@string/aviGlossaryLink" />

                 <TextView
                    style="@style/textMedium.link"
                    android:text="@string/shovelingLink" />

                 <TextView
                    style="@style/textMedium.link"
                    android:text="@string/aviResearchLink" />

                 </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>