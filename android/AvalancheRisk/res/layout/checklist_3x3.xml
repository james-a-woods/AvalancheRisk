<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/checklistScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:fillViewport="true"
        android:scrollbars="vertical" >

        <LinearLayout
            android:id="@+id/checklist3x3Form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transWhite"
            android:orientation="vertical" >

            <Button
                android:id="@+id/resetTop"
                style="@style/button"
                android:layout_marginTop="15dp"
                android:text="@string/resetButton" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:background="@color/transRed"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/regionalHeading"
                    style="@style/textMedium.heading"
                    android:layout_weight="1"
                    android:text="@string/regional" />

                <ImageView
                    android:id="@+id/regionalArrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:layout_weight="0"
                    android:src="@drawable/arrow_down" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/regionalLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible" >

                <TextView
                    style="@style/textMedium.heading"
                    android:text="@string/conditions" />

                <CheckBox
                    style="@style/textSmall"
                    android:text="@string/regional_cond_a" />

                <CheckBox
                    style="@style/textSmall"
                    android:text="@string/regional_cond_b" />

                <CheckBox
                    style="@style/textSmall"
                    android:text="@string/regional_cond_c" />

                <TextView
                    style="@style/textMedium.heading"
                    android:text="@string/terrain" />

                <CheckBox
                    style="@style/textSmall"
                    android:text="@string/regional_terrain_a" />

                <CheckBox
                    style="@style/textSmall"
                    android:text="@string/regional_terrain_b" />

                <CheckBox
                    style="@style/textSmall"
                    android:text="@string/regional_terrain_c" />

                <TextView
                    style="@style/textMedium.heading"
                    android:text="@string/human" />

                <CheckBox
                    style="@style/textSmall"
                    android:text="@string/regional_human_a" />

                <CheckBox
                    style="@style/textSmall"
                    android:text="@string/regional_human_b" />

                <CheckBox
                    style="@style/textSmall"
                    android:text="@string/regional_human_c" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:background="@color/transOrange"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/localHeading"
                    style="@style/textMedium.heading"
                    android:layout_weight="1"
                    android:text="@string/local" />

                <ImageView
                    android:id="@+id/localArrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:layout_weight="0"
                    android:src="@drawable/arrow_down" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/localLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible" >

                <TextView
                    style="@style/textMedium.heading"
                    android:text="@string/conditions" />

                <CheckBox
                    style="@style/textSmall"
                    android:text="@string/local_cond_a" />

                <CheckBox
                    style="@style/textSmall"
                    android:text="@string/local_cond_b" />

                <CheckBox
                    style="@style/textSmall"
                    android:text="@string/local_cond_c" />

                <CheckBox
                    style="@style/textSmall"
                    android:text="@string/local_cond_d" />

                <CheckBox
                    style="@style/textSmall"
                    android:text="@string/local_cond_e" />

                <CheckBox
                    style="@style/textSmall"
                    android:text="@string/local_cond_f" />

                <CheckBox
                    style="@style/textSmall"
                    android:text="@string/local_cond_g" />

                <CheckBox
                    style="@style/textSmall"
                    android:text="@string/local_cond_h" />

                <TextView
                    style="@style/textMedium.heading"
                    android:text="@string/terrain" />

                <CheckBox
                    style="@style/textSmall"
                    android:text="@string/local_terrain_a" />

                <CheckBox
                    style="@style/textSmall"
                    android:text="@string/local_terrain_b" />

                <TextView
                    style="@style/textMedium.heading"
                    android:text="@string/human" />

                <CheckBox
                    style="@style/textSmall"
                    android:text="@string/local_human_a" />

                <CheckBox
                    style="@style/textSmall"
                    android:text="@string/local_human_b" />

                <CheckBox
                    style="@style/textSmall"
                    android:text="@string/local_human_c" />

                <CheckBox
                    style="@style/textSmall"
                    android:text="@string/local_human_d" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:background="@color/transYellow"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/zonalHeading"
                    style="@style/textMedium.heading"
                    android:layout_weight="1"
                    android:text="@string/zonal" />

                <ImageView
                    android:id="@+id/zonalArrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:layout_weight="0"
                    android:src="@drawable/arrow_down" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/zonalLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible" >

                <TextView
                    style="@style/textMedium.heading"
                    android:text="@string/conditions" />

                <CheckBox
                    style="@style/textSmall"
                    android:text="@string/zonal_cond_a" />

                <CheckBox
                    style="@style/textSmall"
                    android:text="@string/zonal_cond_b" />

                <CheckBox
                    style="@style/textSmall"
                    android:text="@string/zonal_cond_c" />

                <CheckBox
                    style="@style/textSmall"
                    android:text="@string/zonal_cond_d" />

                <CheckBox
                    style="@style/textSmall"
                    android:text="@string/zonal_cond_e" />

                <CheckBox
                    style="@style/textSmall"
                    android:text="@string/zonal_cond_f" />

                <TextView
                    style="@style/textMedium.heading"
                    android:text="@string/terrain" />

                <CheckBox
                    style="@style/textSmall"
                    android:text="@string/zonal_terrain_a" />

                <CheckBox
                    style="@style/textSmall"
                    android:text="@string/zonal_terrain_b" />

                <CheckBox
                    style="@style/textSmall"
                    android:text="@string/zonal_terrain_c" />

                <CheckBox
                    style="@style/textSmall"
                    android:text="@string/zonal_terrain_d" />

                <CheckBox
                    style="@style/textSmall"
                    android:text="@string/zonal_terrain_e" />

                <CheckBox
                    style="@style/textSmall"
                    android:text="@string/zonal_terrain_f" />

                <TextView
                    style="@style/textMedium.heading"
                    android:text="@string/human" />

                <CheckBox
                    style="@style/textSmall"
                    android:text="@string/zonal_human_a" />

                <CheckBox
                    style="@style/textSmall"
                    android:text="@string/zonal_human_b" />

                <CheckBox
                    style="@style/textSmall"
                    android:text="@string/zonal_human_d" />

                <CheckBox
                    style="@style/textSmall"
                    android:text="@string/zonal_human_e" />
            </LinearLayout>

            <TextView
                style="@style/textMedium.heading"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:background="@color/transGreen"
                android:text="@string/lastCheck" />

            <Button
                android:id="@+id/resetBottom"
                style="@style/button"
                android:layout_marginBottom="15dp"
                android:text="@string/resetButton" />
        </LinearLayout>
    </ScrollView>

</FrameLayout>